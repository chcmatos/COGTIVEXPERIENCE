<Application
    x:Class="COGTIVE.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:COGTIVE"
    RequestedTheme="Dark">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Colors/ColorDictionary.xaml"/>
                <ResourceDictionary Source="Resources/Styles/Theme.xaml"/>
                <ResourceDictionary Source="Resources/Styles/UIButtonStyle.xaml"/>
                <ResourceDictionary Source="Resources/Styles/UIHyperlinkButtonStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
    
</Application>
